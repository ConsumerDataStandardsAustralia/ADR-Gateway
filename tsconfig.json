{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strictBindCallApply": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}
